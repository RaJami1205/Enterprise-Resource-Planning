@page
@model ERP.Pages.Inventario.Reporte.Reportes_movimiento_bodega.Reporte_Movimientos_GeneralesModel
@{
}

<style>
    /* Estilos permanecen iguales */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(130deg, #0074D9, #001f3f);
        font-family: Calibri, sans-serif;
        color: white;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h2 {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
    }

    form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 40px;
    }

    label {
        font-size: 18px;
    }

    input[type="number"] {
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
        background-color: #24303c;
        color: white;
        width: 60px;
        text-align: center;
    }

    button[type="submit"] {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #0074D9;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #001f3f;
        }

    .error-message {
        color: #ff6b6b;
        text-align: center;
        margin-top: 10px;
        font-size: 18px;
    }

    .chart-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #24303c;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="container">
    <h2>Reporte de Movimientos por Bodega</h2>

    <form method="post">
        <label for="filtro_movimiento">Seleccione el tipo de movimiento</label>
        <a class="btn btn-primary btn-lg" href="/Inventario/Reporte/Reportes_movimiento_bodega/Reporte_Movimientos_Generales">General</a>
        <a class="btn btn-primary btn-lg" href="/Inventario/Reporte/Reportes_movimiento_bodega/Reporte_Entradas">Entrada</a>
        <a class="btn btn-primary btn-lg" href="/Inventario/Reporte/Reportes_movimiento_bodega/Reporte_Salidas">Salida</a>
        <a class="btn btn-primary btn-lg" href="/Inventario/Reporte/Reportes_movimiento_bodega/Reporte_Movimientos">Movimiento</a>

        <button type="submit">Generar Reporte</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.mensajeError))
    {
        <div class="error-message">@Model.mensajeError</div>
    }

    <div class="chart-container">
        <label for="filtro_movimiento">Cantidad de Entradas por Bodega</label>
        <canvas id="EntradaChart" width="400" height="200"></canvas>
    </div>

    <div class="chart-container">
        <label for="filtro_movimiento">Cantidad de Salidas por Bodega</label>
        <canvas id="SalidaChart" width="400" height="200"></canvas>
    </div>

    <div class="chart-container">
        <label for="filtro_movimiento">Cantidad de Movimientos por Bodega</label>
        <canvas id="MovimientoChart" width="400" height="200"></canvas>
    </div>
</div>

