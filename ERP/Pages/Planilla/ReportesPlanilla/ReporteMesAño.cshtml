@page
@model ERP.Pages.Planilla.ReportesPlanilla.ReporteMesAñoModel
@{
    ViewData["Title"] = "Reporte de Monto Pagado por Mes y Año";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(130deg, #0074D9, #001f3f);
        font-family: Calibri, sans-serif;
        color: white;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h2 {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
    }

    form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 40px;
    }

    label {
        font-size: 18px;
    }

    input[type="date"] {
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
        background-color: #24303c;
        color: white;
        text-align: center;
    }

    button[type="submit"] {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #0074D9;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #001f3f;
    }

    .error-message {
        color: #ff6b6b;
        text-align: center;
        margin-top: 10px;
        font-size: 18px;
    }

    .chart-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        background-color: #24303c;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="container">
    <h2>Reporte de Monto Pagado por Mes y Año</h2>

    <form method="post">
        <label for="FechaInicio">Fecha Inicio:</label>
        <input type="date" id="FechaInicio" name="FechaInicio" required />

        <label for="FechaFin">Fecha Fin:</label>
        <input type="date" id="FechaFin" name="FechaFin" required />

        <button type="submit">Generar Reporte</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.mensajeError))
    {
        <div class="error-message">@Model.mensajeError</div>
    }

    <div class="chart-container">
        <canvas id="planillaChart" width="800" height="400"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('planillaChart').getContext('2d');
        var chartData = {
            labels: @Html.Raw(Json.Serialize(Model.PlanillaMesAñoData.Select(d => d.AñoMes))),
            datasets: [{
                label: 'Monto Total por Mes',
                data: @Html.Raw(Json.Serialize(Model.PlanillaMesAñoData.Select(d => d.MontoTotal))),
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };
        var planillaChart = new Chart(ctx, {
            type: 'bar',
            data: chartData,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: 'white'
                        }
                    },
                    x: {
                        ticks: {
                            color: 'white'
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: 'white'
                        }
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>
}
