@page
@model ERP.Pages.Planilla.ReportesPlanilla.ReporteDepartamentoMesModel
@{
    ViewData["Title"] = "Reporte de Monto Pagado por Departamento";
}

<style>
    /* Estilos permanecen iguales */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(130deg, #0074D9, #001f3f);
        font-family: Calibri, sans-serif;
        color: white;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h2 {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
    }

    form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 40px;
    }

    label {
        font-size: 18px;
    }

    input[type="number"] {
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
        background-color: #24303c;
        color: white;
        width: 60px;
        text-align: center;
    }

    button[type="submit"] {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #0074D9;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #001f3f;
    }

    .error-message {
        color: #ff6b6b;
        text-align: center;
        margin-top: 10px;
        font-size: 18px;
    }

    .chart-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #24303c;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="container">
    <h2>Reporte de Monto Pagado por Departamento</h2>

    <form method="post">
        <label for="Mes">Mes:</label>
        <input type="number" id="Mes" name="Mes" min="1" max="12" required />

        <label for="Anno">Año:</label>
        <input type="number" id="Anno" name="Anno" min="2000" required />

        <button type="submit">Generar Reporte</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.mensajeError))
    {
        <div class="error-message">@Model.mensajeError</div>
    }

    <div class="chart-container">
        <canvas id="montoChart" width="400" height="200"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Datos del modelo, adaptados para montos ganados
        console.log("Datos de los departamentos:", @Html.Raw(Json.Serialize(Model.DepartamentoMontoData)));

        var ctx = document.getElementById('montoChart').getContext('2d');
        var chartData = {
            labels: @Html.Raw(Json.Serialize(Model.DepartamentoMontoData.Select(d => d.Departamento))), // Etiquetas: Nombres de departamentos
            datasets: [{
                label: 'Monto Total Ganado',
                data: @Html.Raw(Json.Serialize(Model.DepartamentoMontoData.Select(d => d.MontoTotal))), // Valores: Montos ganados
                backgroundColor: [
                    'rgba(54, 162, 235, 0.6)', 'rgba(255, 99, 132, 0.6)', 'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)', 'rgba(153, 102, 255, 0.6)', 'rgba(255, 159, 64, 0.6)',
                    'rgba(99, 255, 132, 0.6)', 'rgba(255, 0, 255, 0.6)', 'rgba(0, 255, 255, 0.6)',
                    'rgba(128, 128, 0, 0.6)', 'rgba(255, 140, 0, 0.6)', 'rgba(0, 128, 128, 0.6)'
                ],
                borderColor: [
                    'rgba(54, 162, 235, 1)', 'rgba(255, 99, 132, 1)', 'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)', 'rgba(255, 159, 64, 1)',
                    'rgba(99, 255, 132, 1)', 'rgba(255, 0, 255, 1)', 'rgba(0, 255, 255, 1)',
                    'rgba(128, 128, 0, 1)', 'rgba(255, 140, 0, 1)', 'rgba(0, 128, 128, 1)'
                ],
                borderWidth: 1
            }]
        };

        var montoChart = new Chart(ctx, {
            type: 'pie',
            data: chartData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            color: 'white'
                        }
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>
}
