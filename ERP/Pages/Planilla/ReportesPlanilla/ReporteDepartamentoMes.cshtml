@page
@model ERP.Pages.Planilla.ReportesPlanilla.ReporteDepartamentoMesModel
@{
    ViewData["Title"] = "Reporte de Monto Pagado por Departamento y Mes";
}

<h2>Reporte de Monto Pagado por Departamento y Mes</h2>

<form method="post">
    <label for="Mes">Mes:</label>
    <input type="number" id="Mes" name="Mes" min="1" max="12" required />

    <label for="DepartamentoId">Departamento:</label>
    <select id="DepartamentoId" name="DepartamentoId" required>
        <option value="">Seleccione un departamento</option>
        @foreach (var depto in Model.Departamentos)
        {
            <option value="@depto.Id">@depto.Nombre</option>
        }
    </select>

    <button type="submit">Generar Reporte</button>
</form>

@if (!string.IsNullOrEmpty(Model.mensajeError))
{
    <div style="color: red">@Model.mensajeError</div>
}

<canvas id="planillaChart" width="400" height="200"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('planillaChart').getContext('2d');
        var chartData = {
            labels: @Html.Raw(Json.Serialize(Model.PlanillaDepartamentoData.Select(d => d.Departamento))),
            datasets: [{
                label: 'Monto Total por Departamento',
                data: @Html.Raw(Json.Serialize(Model.PlanillaDepartamentoData.Select(d => d.MontoTotal))),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        };
        var planillaChart = new Chart(ctx, {
            type: 'pie',
            data: chartData,
            options: {
                responsive: true
            }
        });
    </script>
}
