@page
@model ERP.Pages.Cotizacion.Cotizacion_view.Cotizacion_view_formModel
@{
}

<body>
    <section class="form-register">
        <h1>Registrar Cotización</h1>

        <!-- Mensaje emergente de éxito luego de una inserción correcta -->
        @if (Model.mensaje_exito.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_exito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- Mensaje emergente de error luego de una inserción fallida mostrando el problema ocurrido -->
        @if (Model.mensaje_error.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" autocomplete="off">

            <!-- Número de Cotización -->
            <input class="controls" type="number" name="num_cotizacion" id="num_cotizacion" placeholder="Ingrese el número de cotización" required value="@Model.Cotizacion.num_cotizacion">

            <!-- Orden de Compra -->
            <input class="controls" type="text" name="orden_compra" id="orden_compra" placeholder="Ingrese la orden de compra" required value="@Model.Cotizacion.orden_compra">

            <!-- Descripción -->
            <input class="controls" type="text" name="descripcion" id="descripcion" placeholder="Ingrese la descripción" required value="@Model.Cotizacion.descripcion">

            <!-- Monto Total -->
            <input class="controls" type="number" step="0.01" name="monto_total" id="monto_total" placeholder="Ingrese el monto total" required value="@Model.Cotizacion.monto_total">

            <!-- Mes de Cierre (1-12) -->
            <input class="controls" type="number" name="mes_cierre" id="mes_cierre" placeholder="Ingrese el mes de cierre (1-12)" min="1" max="12" required value="@Model.Cotizacion.mes_cierre">

            <!-- Probabilidad (1.00 - 100.00) -->
            <input class="controls" type="number" step="0.01" name="probabilidad" id="probabilidad" placeholder="Ingrese la probabilidad (1.00 - 100.00)" min="1" max="100" required value="@Model.Cotizacion.probabilidad">

            <!-- Nombre del Vendedor -->
            <input class="controls" type="text" name="nombre_vendedor" id="nombre_vendedor" placeholder="Ingrese el nombre del vendedor" required value="@Model.Cotizacion.nombre_vendedor">

            <!-- Nombre del Cliente -->
            <input class="controls" type="text" name="nombre_cliente" id="nombre_cliente" placeholder="Ingrese el nombre del cliente" required value="@Model.Cotizacion.nombre_cliente">

            <!-- Zona (ComboBox) -->
            <select class="controls" name="zona" id="zona" required>
                <option value="" disabled selected>Seleccione la zona</option>
                @foreach (var zona in Model.Zonas)
                {
                    <option value="@zona">@zona</option>
                }
            </select>

            <!-- Sector (ComboBox) -->
            <select class="controls" name="sector" id="sector" required>
                <option value="" disabled selected>Seleccione el sector</option>
                @foreach (var sector in Model.Sectores)
                {
                    <option value="@sector">@sector</option>
                }
            </select>

            <!-- Estado de Cotización (ComboBox) -->
            <select class="controls" name="estado" id="estado" required>
                <option value="" disabled selected>Seleccione el estado de la cotización</option>
                @foreach (var estado in Model.EstadosCotizacion)
                {
                    <option value="@estado">@estado</option>
                }
            </select>

            <!-- Tipo de Cotización (ComboBox) -->
            <select class="controls" name="tipo" id="tipo" required>
                <option value="" disabled selected>Seleccione el tipo de cotización</option>
                @foreach (var tipo in Model.TiposCotizacion)
                {
                    <option value="@tipo">@tipo</option>
                }
            </select>

            <!-- Botón de Registro -->
            <button type="submit" asp-page-handler="" class="buttoms">Registrar</button>

        </form>
    </section>
</body>

<!-- Estilos CSS para la página -->
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(130deg, blue, skyblue);
    }

    .form-register {
        width: 400px;
        background: #24303c;
        padding: 30px;
        margin: auto;
        margin-top: 100px;
        border-radius: 4px;
        font-family: Calibri;
        color: white;
        box-shadow: 7px 13px 37px #000;
    }

    .controls {
        width: 100%;
        background: #24303c;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 16px;
        border: 1px solid #1f53c5;
        font-family: Calibri;
        font-size: 18px;
        color: white;
    }

    .buttoms {
        width: 100%;
        background: #1f53c5;
        border: none;
        padding: 12px;
        color: white;
        margin: 16px 0;
        font-size: 18px;
    }
</style>