@page
@model ERP.Pages.Cotizacion.Cotizacion_view.Cotizacion_view_formModel
@{
}

<body>
    <section class="form-register">
        <h1>Cotizacion</h1>
        <form method="post" autocomplete="off">

            <input class="controls" type="text" name="numero" id="numero" placeholder="Ingrese el numero" required>

            <!-- Agregar el combobox para seleccionar la cedula del cliente -->
            <select class="controls" name="cedula_cliente" id="cedula_cliente" required>
                <option value="cliente">Seleccione un cliente</option>
                <option value="cliente">Lista de clientes</option>
            </select>

            <input class="controls" type="date" name="fecha_inicio" id="fecha_inicio" required>

            <input class="controls" type="text" name="mes_proyectado" id="mes_proyectado" placeholder="Ingrese el mes proyecto" required>

            <!-- Agregar el combobox para seleccionar el vendedor -->
            <select class="controls" name="vendedor" id="vendedor" required>
                <option value="vendedor">Seleccione un vendedor</option>
                <option value="vendedor">Lista de vendedores</option>
            </select>

            <input class="controls" type="date" name="fecha_ciere" id="fecha_cierre" required>

            <input class="controls" type="text" name="probabilidad" id="probabilidad" placeholder="Ingrese la probabilidad de compra" required>

            <input class="controls" type="text" name="orden" id="orden" placeholder="Ingrese la orden de compra" required>

            <input class="controls" type="text" name="tipo" id="tipo" placeholder="Ingrese el tipo" required>

            <input class="controls" type="text" name="descripcion" id="descripcion" placeholder="Ingrese la descripcion" required>

            <input class="controls" type="text" name="zona" id="zona" placeholder="Ingrese la zona" required>

            <input class="controls" type="text" name="sector" id="sector" placeholder="Ingrese el sector industrial" required>

            <!-- Agregar el combobox para seleccionar el estado -->
            <select class="controls" name="estado" id="estado" required>
                <option value="estado">Seleccione un estado</option>
                <option value="estado">abierta</option>
                <option value="estado">aprobada</option>
                <option value="estado">denegada</option>
            </select>

            <!-- Agregar el combobox para seleccionar el articulo -->
            <select class="controls" name="articulo" id="articulo" required>
                <option value="articulo">Seleccione un articulo</option>
                <option value="articulo">Lista de Articulos</option>
            </select>

            <input class="controls" type="text" name="cantidad" id="cantidad" placeholder="Ingrese la cantidad de articulos" required>

            <input class="controls" type="text" name="monto" id="monto" placeholder="Ingrese el monto total" required>

            <input class="controls" type="text" name="razon_denegacion" id="razon_denegacion" placeholder="Ingrese la razón de denegación">

            <!-- Agregar el combobox para seleccionar el cliente rechazado -->
            <select class="controls" name="cliente_rechazado" id="cliente_rechazado">
                <option value="cliente_rechazado">Seleccione un cliente</option>
                <option value="cliente_rechazado">Lista de Clientes</option>
            </select>
            <button type="submit" asp-page-handler="" class="buttoms">Cotizar</button>

        </form>
    </section>
</body>

<!-- Estilos CSS para la página -->
<style>
    /* Resetea márgenes y rellenos, y aplica box-sizing border-box para todos los elementos */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Estilo para el fondo del cuerpo de la página */
    body {
        background: linear-gradient(130deg, blue, skyblue);
    }

    /* Estilo para la sección del formulario de registro */
    .form-register {
        width: 400px; /* Ancho del formulario */
        background: #24303c; /* Color de fondo del formulario */
        padding: 30px; /* Relleno interno del formulario */
        margin: auto; /* Centra el formulario horizontalmente */
        margin-top: 100px; /* Margen superior para separación de la parte superior de la página */
        border-radius: 4px; /* Bordes redondeados del formulario */
        font-family: Calibri; /* Fuente del texto en el formulario */
        color: white; /* Color del texto en el formulario */
        box-shadow: 7px 13px 37px #000; /* Sombra del formulario para un efecto elevado */
    }

    /* Estilo para los campos de entrada del formulario */
    .controls {
        width: 100%; /* Ancho completo del campo de entrada */
        background: #24303c; /* Color de fondo del campo de entrada */
        padding: 10px; /* Relleno interno del campo de entrada */
        border-radius: 4px; /* Bordes redondeados del campo de entrada */
        margin-bottom: 16px; /* Margen inferior entre los campos de entrada */
        border: 1px solid #1f53c5; /* Borde del campo de entrada */
        font-family: Calibri; /* Fuente del texto en el campo de entrada */
        font-size: 18px; /* Tamaño de la fuente en el campo de entrada */
        color: white; /* Color del texto en el campo de entrada */
    }

    /* Estilo para el botón de enviar del formulario */
    .buttoms {
        width: 100%; /* Ancho completo del botón */
        background: #1f53c5; /* Color de fondo del botón */
        border: none; /* Sin borde para el botón */
        padding: 12px; /* Relleno interno del botón */
        color: white; /* Color del texto en el botón */
        margin: 16px 0; /* Margen superior e inferior para el botón */
        font-size: 18px; /* Tamaño de la fuente en el botón */
    }
</style>