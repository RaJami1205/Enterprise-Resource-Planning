@page
@model ERP.Pages.Empleado.Empleado_view.Empleado_view_listModel
@{
}

<!-- Interfaz gráfica html de la lista de Empleados -->
<br />
<h2> Lista de Empleados </h2>
<a class="btn btn-primary btn-sm" href="/Empleado/Empleado_view/Empleado_view_form"> Nuevo Empleado</a>
<table class="table">
    <thead>
        <tr>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido 1</th>
            <th>Apellido 2</th>
            <th>Puesto</th>
            <th>Departamento</th>
            <th>Vendedor</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        <!-- Ciclo que extrae los datos de la tabla de Empleados para mostrar toda información registrada -->
        @foreach (var item in Model.listaEmpleados)
        {
            <tr>
                <td>@item.cedula</td>
                <td>@item.nombre</td>
                <td>@item.apellido1</td>
                <td>@item.apellido2</td>
                <td>@item.puesto</td>
                <td>@item.departamento</td>
                <td>@item.permiso_vendedor</td>
                <td>
                    <a class="btn btn-primary btn-sm">Editar</a>
                    <a class="btn btn-primary btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>