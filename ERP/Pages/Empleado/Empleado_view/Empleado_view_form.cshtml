@page
@model ERP.Pages.Empleado.Empleado_view.Empleado_view_formModel
@{
}

<body>
    <section class="form-register">
        <h1>Empleado</h1>

        @if (Model.mensaje_exito.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_exito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (Model.mensaje_error.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" autocomplete="off">

            <input class="controls" type="text" name="cedula" id="cedula" placeholder="Ingrese la cedula" required value="@Model.Empleado.cedula">

            <input class="controls" type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre" required value="@Model.Empleado.nombre">

            <input class="controls" type="text" name="apellido1" id="apellido1" placeholder="Ingrese el primer apellido" required value="@Model.Empleado.apellido1">

            <input class="controls" type="text" name="apellido2" id="apellido2" placeholder="Ingrese el segundo apellido" required value="@Model.Empleado.apellido2">

            <!-- Agregar el combobox para seleccionar el género -->
            <select class="controls" name="genero" id="genero required" value="@Model.Empleado.genero">
                <option value="genero">Seleccione el género</option>
                <option value="genero">Masculino</option>
                <option value="genero">Femenino</option>
            </select>

            <input class="controls" type="date" name="fecha_nacimiento" id="fecha_nacimiento" placeholder="Ingrese la fecha de nacimiento" required value="@Model.Empleado.fecha_nacimiento">

            <input class="controls" type="text" name="residencia" id="residencia" placeholder="Ingrese la residencia" required value="@Model.Empleado.residencia">

            <input class="controls" type="text" name="numero_telefono" id="numero_telefono" placeholder="Ingrese el telefono" required value="@Model.Empleado.numero_telefono">

            <input class="controls" type="date" name="fecha_ingreso" id="fecha_ingreso" placeholder="Ingrese la fecha de ingreso" required value="@Model.Empleado.fecha_ingreso">

            <input class="controls" type="text" name="salario_actual" id="salario_actual" placeholder="Ingrese el salario" required value="@Model.Empleado.salario_actual">

            <!-- Agregar el combobox para seleccionar el puesto -->
            <select class="controls" name="puesto" id="puesto" required value="@Model.Empleado.puesto">
                <option value="propietario">Seleccione un puesto</option>
                <option value="propietario">Lista de departamentos</option>
            </select>

            <!-- Agregar el combobox para seleccionar el departamento -->
            <select class="controls" name="departamento" id="departamento" required value="@Model.Empleado.departamento">
                <option value="propietario">Seleccione el departamento</option>
                <option value="propietario">Lista de departamentos</option>
            </select>

            <input class="controls" type="text" name="permiso_vendedor" id="permiso_vendedor" placeholder="Ingrese el permiso" required value="@Model.Empleado.permiso_vendedor">

            <input class="controls" type="text" name="usuario" id="usuario" placeholder="Ingrese el usuario" required value="@Model.Empleado.usuario">

            <input class="controls" type="text" name="contraseña" id="contraseña" placeholder="Ingrese la contraseña" required value="@Model.Empleado.contraseña">

            <button type="submit" asp-page-handler="Registrar_actividad" class="buttoms">Registrar</button>
        </form>
    </section>
</body>

<!-- Estilos CSS para la página -->
<style>
    /* Resetea márgenes y rellenos, y aplica box-sizing border-box para todos los elementos */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Estilo para el fondo del cuerpo de la página */
    body {
        background: linear-gradient(130deg, blue, skyblue);
    }

    /* Estilo para la sección del formulario de registro */
    .form-register {
        width: 400px; /* Ancho del formulario */
        background: #24303c; /* Color de fondo del formulario */
        padding: 30px; /* Relleno interno del formulario */
        margin: auto; /* Centra el formulario horizontalmente */
        margin-top: 100px; /* Margen superior para separación de la parte superior de la página */
        border-radius: 4px; /* Bordes redondeados del formulario */
        font-family: Calibri; /* Fuente del texto en el formulario */
        color: white; /* Color del texto en el formulario */
        box-shadow: 7px 13px 37px #000; /* Sombra del formulario para un efecto elevado */
    }

    /* Estilo para los campos de entrada del formulario */
    .controls {
        width: 100%; /* Ancho completo del campo de entrada */
        background: #24303c; /* Color de fondo del campo de entrada */
        padding: 10px; /* Relleno interno del campo de entrada */
        border-radius: 4px; /* Bordes redondeados del campo de entrada */
        margin-bottom: 16px; /* Margen inferior entre los campos de entrada */
        border: 1px solid #1f53c5; /* Borde del campo de entrada */
        font-family: Calibri; /* Fuente del texto en el campo de entrada */
        font-size: 18px; /* Tamaño de la fuente en el campo de entrada */
        color: white; /* Color del texto en el campo de entrada */
    }

    /* Estilo para el botón de enviar del formulario */
    .buttoms {
        width: 100%; /* Ancho completo del botón */
        background: #1f53c5; /* Color de fondo del botón */
        border: none; /* Sin borde para el botón */
        padding: 12px; /* Relleno interno del botón */
        color: white; /* Color del texto en el botón */
        margin: 16px 0; /* Margen superior e inferior para el botón */
        font-size: 18px; /* Tamaño de la fuente en el botón */
    }
</style>