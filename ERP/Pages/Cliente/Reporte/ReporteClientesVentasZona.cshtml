@page
@model ERP.Pages.Cliente.Reporte.ReporteClientesVentasZonaModel
@{
    ViewData["Title"] = "Reporte de Clientes y Ventas por Zona";
}

<style>
    body {
        background: linear-gradient(130deg, #0074D9, #001f3f);
        font-family: Calibri, sans-serif;
        color: white;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    input[type="date"] {
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
        background-color: #ffffff;
        color: #24303c;
    }

    button {
        padding: 10px 15px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background-color: #0074D9;
        color: white;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background-color: #001f3f;
    }

    .error-message {
        color: #ff6b6b;
        text-align: center;
        font-size: 18px;
        margin-top: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #24303c;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ffffff;
    }

    th {
        background-color: #0074D9;
    }
</style>

<div class="container">
    <h2>Reporte de Clientes y Ventas por Zona</h2>

    <form method="post">
        <label for="FechaInicio">Fecha Inicio:</label>
        <input type="date" id="FechaInicio" name="FechaInicio" required />

        <label for="FechaFin">Fecha Fin:</label>
        <input type="date" id="FechaFin" name="FechaFin" required />

        <button type="submit">Generar Reporte</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.mensajeError))
    {
        <div class="error-message">@Model.mensajeError</div>
    }

    @if (Model.ClientesVentasZonaData.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Zona</th>
                    <th>Cantidad de Clientes</th>
                    <th>Monto Total de Ventas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var zona in Model.ClientesVentasZonaData)
                {
                    <tr>
                        <td>@zona.Zona</td>
                        <td>@zona.CantidadClientes</td>
                        <td>@zona.MontoVentas.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay datos para el rango de fechas seleccionado.</p>
    }
</div>
