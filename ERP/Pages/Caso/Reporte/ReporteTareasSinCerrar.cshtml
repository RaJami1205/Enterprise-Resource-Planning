@page
@model ERP.Pages.Caso.Reporte.ReporteTareasSinCerrarModel
@{
    ViewData["Title"] = "Top 15 Tareas Sin Cerrar Más Antiguas";
}

<style>
    body {
        background: linear-gradient(130deg, #0074D9, #001f3f);
        font-family: Calibri, sans-serif;
        color: white;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    input[type="date"] {
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
        background-color: #ffffff;
        color: #24303c;
    }

    button {
        padding: 10px 15px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background-color: #0074D9;
        color: white;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background-color: #001f3f;
    }

    .error-message {
        color: #ff6b6b;
        text-align: center;
        font-size: 18px;
        margin-top: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #24303c;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ffffff;
    }

    th {
        background-color: #0074D9;
    }
</style>

<div class="container">
    <h2>Top 15 Tareas Sin Cerrar Más Antiguas</h2>

    <form method="post">
        <label for="FechaInicio">Fecha Inicio:</label>
        <input type="date" id="FechaInicio" name="FechaInicio" required />

        <label for="FechaFin">Fecha Fin:</label>
        <input type="date" id="FechaFin" name="FechaFin" required />

        <button type="submit">Generar Reporte</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.mensajeError))
    {
        <div class="error-message">@Model.mensajeError</div>
    }

    @if (Model.TareasSinCerrarData.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Código Tarea</th>
                    <th>Nombre Cuenta</th>
                    <th>Fecha Tarea</th>
                    <th>Estado Caso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarea in Model.TareasSinCerrarData)
                {
                    <tr>
                        <td>@tarea.CodigoTarea</td>
                        <td>@tarea.NombreCuenta</td>
                        <td>@tarea.FechaTarea.ToString("dd/MM/yyyy")</td>
                        <td>@tarea.EstadoCaso</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay tareas para el rango de fechas seleccionado.</p>
    }
</div>
