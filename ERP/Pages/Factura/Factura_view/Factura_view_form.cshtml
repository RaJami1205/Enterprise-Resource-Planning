@page
@model ERP.Pages.Factura.Factura_view.Factura_formModel
@{
}

<!-- Interfaz gráfica html de formulario de Factura -->
<body>
    <section class="form-register">
        <h1>Registrar Factura</h1>

        <!-- Mensaje emergente de éxito luego de una inserción correcta -->
        @if (Model.mensaje_exito.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_exito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- Mensaje emergente de error luego de una inserción fallida mostrando el problema ocurrido -->
        @if (Model.mensaje_error.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form method="post" autocomplete="off">

            <!-- Número de Facturación -->
            <input class="controls" type="number" name="num_facturacion" id="num_facturacion" placeholder="Ingrese el número de facturación" required value="@Model.Factura.num_facturacion">

            <!-- Teléfono del Local -->
            <input class="controls" type="number" name="telefono_local" id="telefono_local" placeholder="Ingrese el teléfono del local" required value="@Model.Factura.telefono_local">

            <!-- Nombre del Local -->
            <input class="controls" type="text" name="nombre_local" id="nombre_local" placeholder="Ingrese el nombre del local" required value="@Model.Factura.nombre_local">

            <!-- Fecha de Emisión -->
            <input class="controls date-placeholder" type="date" name="fecha" id="fecha" required value="@Model.Factura.fecha" data-placeholder="Fecha de emisión">

            <!-- Estado de Factura -->
            <select class="controls" name="estado" id="estado" required>
                <option value="" disabled selected>Seleccione el estado</option>
                @foreach (var estado in Model.EstadosFactura)
                {
                    <option value="@estado">@estado</option>
                }
            </select>

            <!-- Cédula del Vendedor -->
            <select class="controls" name="cedula_vendedor" id="cedula_vendedor" required>
                <option value="" disabled selected>Seleccione el vendedor</option>
                @foreach (var vendedor in Model.Empleados)
                {
                    <option value="@vendedor">@vendedor</option>
                }
            </select>

            <!-- Cédula Jurídica del Cliente -->
            <select class="controls" name="cedula_juridica" id="cedula_juridica" required>
                <option value="" disabled selected>Seleccione el cliente</option>
                @foreach (var cliente in Model.Clientes)
                {
                    <option value="@cliente">@cliente</option>
                }
            </select>

            <!-- Cotizacion -->
            <select class="controls" name="num_cotizacion" id="num_cotizacion" value="">
                <option value="" disabled selected>Seleccione la cotizacion</option>
                @foreach (var cotizacion in Model.Cotizaciones)
                {
                    <option value="@cotizacion">@cotizacion</option>
                }
            </select>

            </select>

            <!-- Bodega -->
            <select class="controls" name="bodega" id="bodega" value="">
                <option value="" disabled selected>Seleccione la bodega</option>
                @foreach (var bodega in Model.Bodegas)
                {
                    <option value="@bodega">@bodega</option>
                }
            </select>

            <!-- Botón de Registro -->
            <button type="submit" asp-page-handler="" class="buttoms">Registrar</button>

        </form>
    </section>
</body>

<!-- Estilos CSS para la página -->
<style>
    /* Resetea márgenes y rellenos, y aplica box-sizing border-box para todos los elementos */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Estilo para el fondo del cuerpo de la página */
    body {
        background: linear-gradient(130deg, blue, skyblue);
    }

    /* Estilo para la sección del formulario de registro */
    .form-register {
        width: 400px; /* Ancho del formulario */
        background: #24303c; /* Color de fondo del formulario */
        padding: 30px; /* Relleno interno del formulario */
        margin: auto; /* Centra el formulario horizontalmente */
        margin-top: 100px; /* Margen superior para separación de la parte superior de la página */
        border-radius: 4px; /* Bordes redondeados del formulario */
        font-family: Calibri; /* Fuente del texto en el formulario */
        color: white; /* Color del texto en el formulario */
        box-shadow: 7px 13px 37px #000; /* Sombra del formulario para un efecto elevado */
    }

    /* Estilo para los campos de entrada del formulario */
    .controls {
        width: 100%; /* Ancho completo del campo de entrada */
        background: #24303c; /* Color de fondo del campo de entrada */
        padding: 10px; /* Relleno interno del campo de entrada */
        border-radius: 4px; /* Bordes redondeados del campo de entrada */
        margin-bottom: 16px; /* Margen inferior entre los campos de entrada */
        border: 1px solid #1f53c5; /* Borde del campo de entrada */
        font-family: Calibri; /* Fuente del texto en el campo de entrada */
        font-size: 18px; /* Tamaño de la fuente en el campo de entrada */
        color: white; /* Color del texto en el campo de entrada */
    }

    /* Estilo para el botón de enviar del formulario */
    .buttoms {
        width: 100%; /* Ancho completo del botón */
        background: #1f53c5; /* Color de fondo del botón */
        border: none; /* Sin borde para el botón */
        padding: 12px; /* Relleno interno del botón */
        color: white; /* Color del texto en el botón */
        margin: 16px 0; /* Margen superior e inferior para el botón */
        font-size: 18px; /* Tamaño de la fuente en el botón */
    }
</style>