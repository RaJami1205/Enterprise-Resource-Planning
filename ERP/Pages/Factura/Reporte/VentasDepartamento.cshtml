@page
@model ERP.Pages.Factura.Reporte.VentasDepartamentoModel
@{
}

<style>
    /* Estilos permanecen iguales */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(130deg, #0074D9, #001f3f);
        font-family: Calibri, sans-serif;
        color: white;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h2 {
        font-size: 28px;
        margin-bottom: 20px;
        text-align: center;
    }

    form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 40px;
    }

    label {
        font-size: 18px;
    }

    input[type="date"] {
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
        background-color: #ffffff;
        color: #24303c;
    }

    button[type="submit"] {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #0074D9;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #001f3f;
        }

    .error-message {
        color: #ff6b6b;
        text-align: center;
        margin-top: 10px;
        font-size: 18px;
    }

    .chart-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #24303c;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="container">
    <h2>Reporte de Ventas por Departamento (Porcentual)</h2>

    <form method="post">
        <label for="FechaInicio">Fecha Inicio:</label>
        <input type="date" id="FechaInicio" name="FechaInicio" required />

        <label for="FechaFin">Fecha Fin:</label>
        <input type="date" id="FechaFin" name="FechaFin" required />

        <button type="submit">Generar Reporte</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.mensajeError))
    {
        <div class="error-message">@Model.mensajeError</div>
    }

    <div class="chart-container">
        <canvas id="ventasChart" width="400" height="400"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('ventasChart').getContext('2d');
        var totalMonto = @Html.Raw(Json.Serialize(Model.VentasData.Sum(v => v.cantidadTotal)));
        var chartData = {
            labels: @Html.Raw(Json.Serialize(Model.VentasData.Select(v => v.Departamento))),
            datasets: [{
                label: 'Porcentaje de ventas por departamento',
                data: @Html.Raw(Json.Serialize(Model.VentasData.Select(v => Math.Round((v.cantidadTotal / @Model.TotalCantidad) * 100, 2)))),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)', 'rgba(54, 162, 235, 0.6)', 'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)', 'rgba(153, 102, 255, 0.6)', 'rgba(255, 159, 64, 0.6)',
                    'rgba(99, 255, 132, 0.6)', 'rgba(255, 0, 255, 0.6)', 'rgba(0, 255, 255, 0.6)',
                    'rgba(128, 128, 0, 0.6)', 'rgba(255, 140, 0, 0.6)', 'rgba(0, 128, 128, 0.6)',
                    'rgba(128, 0, 128, 0.6)', 'rgba(75, 0, 130, 0.6)', 'rgba(139, 0, 139, 0.6)',
                    'rgba(255, 69, 0, 0.6)', 'rgba(255, 215, 0, 0.6)', 'rgba(0, 255, 127, 0.6)',
                    'rgba(64, 224, 208, 0.6)', 'rgba(240, 128, 128, 0.6)', 'rgba(60, 179, 113, 0.6)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)', 'rgba(255, 159, 64, 1)',
                    'rgba(99, 255, 132, 1)', 'rgba(255, 0, 255, 1)', 'rgba(0, 255, 255, 1)',
                    'rgba(128, 128, 0, 1)', 'rgba(255, 140, 0, 1)', 'rgba(0, 128, 128, 1)',
                    'rgba(128, 0, 128, 1)', 'rgba(75, 0, 130, 1)', 'rgba(139, 0, 139, 1)',
                    'rgba(255, 69, 0, 1)', 'rgba(255, 215, 0, 1)', 'rgba(0, 255, 127, 1)',
                    'rgba(64, 224, 208, 1)', 'rgba(240, 128, 128, 1)', 'rgba(60, 179, 113, 1)'
                ],
                borderWidth: 1
            }]
        };
        var ventasChart = new Chart(ctx, {
            type: 'pie',
            data: chartData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            color: 'white'
                        }
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>
}
